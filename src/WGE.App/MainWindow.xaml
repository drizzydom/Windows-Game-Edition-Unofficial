<Window x:Class="WGE.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Windows Game Edition (Unofficial)"
        Width="1100"
        Height="700"
        MinWidth="950"
        MinHeight="650"
        Background="#15171c"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- Modern dark theme color palette -->
        <SolidColorBrush x:Key="PrimaryBackground" Color="#15171c" />
        <SolidColorBrush x:Key="SecondaryBackground" Color="#1c1f26" />
        <SolidColorBrush x:Key="CardBackground" Color="#111318" />
        <SolidColorBrush x:Key="BorderColor" Color="#3c4049" />
        <SolidColorBrush x:Key="AccentGreen" Color="#0b8457" />
        <SolidColorBrush x:Key="AccentBlue" Color="#3b82f6" />
        <SolidColorBrush x:Key="AccentOrange" Color="#f59e0b" />
        <SolidColorBrush x:Key="AccentRed" Color="#ef4444" />
        <SolidColorBrush x:Key="TextPrimary" Color="White" />
        <SolidColorBrush x:Key="TextSecondary" Color="#cfd2da" />
        <SolidColorBrush x:Key="TextMuted" Color="#9ba0b2" />

        <!-- Modern button style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#2d3139" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="BorderBrush" Value="#3c4049" />
            <Setter Property="Padding" Value="16,10" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#3d4149" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Primary action button style -->
        <Style x:Key="PrimaryButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#0b8457" />
            <Setter Property="BorderBrush" Value="#0d9668" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#0d9668" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Warning button style for revert -->
        <Style x:Key="WarningButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#b45309" />
            <Setter Property="BorderBrush" Value="#d97706" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#d97706" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Status indicator styles -->
        <Style x:Key="StatusBadge" TargetType="Border">
            <Setter Property="CornerRadius" Value="4" />
            <Setter Property="Padding" Value="6,2" />
            <Setter Property="HorizontalAlignment" Value="Left" />
        </Style>

        <!-- DataGrid styling for dark theme -->
        <Style TargetType="DataGrid">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="RowBackground" Value="Transparent" />
            <Setter Property="AlternatingRowBackground" Value="#1c1f26" />
            <Setter Property="GridLinesVisibility" Value="None" />
            <Setter Property="HeadersVisibility" Value="Column" />
        </Style>

        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#20232a" />
            <Setter Property="Foreground" Value="#9ba0b2" />
            <Setter Property="Padding" Value="10,8" />
            <Setter Property="BorderThickness" Value="0,0,0,1" />
            <Setter Property="BorderBrush" Value="#3c4049" />
            <Setter Property="FontWeight" Value="SemiBold" />
        </Style>

        <Style TargetType="DataGridCell">
            <Setter Property="Padding" Value="10,8" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridCell">
                        <Border Padding="{TemplateBinding Padding}" Background="{TemplateBinding Background}">
                            <ContentPresenter VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#2d3139" />
                    <Setter Property="Foreground" Value="White" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="DataGridRow">
            <Setter Property="Background" Value="Transparent" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#252830" />
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#2d3139" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- ListBox styling -->
        <Style TargetType="ListBox">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Foreground" Value="White" />
        </Style>

        <Style TargetType="ListBoxItem">
            <Setter Property="Padding" Value="12,10" />
            <Setter Property="Margin" Value="0,2" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="Border" Background="Transparent" CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#252830" />
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#0b8457" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="200" />
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#20232a" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" Orientation="Vertical">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="&#x1F3AE;" FontSize="28" Margin="0,0,12,0" VerticalAlignment="Center" />
                        <TextBlock Text="Windows Game Edition" FontSize="26" FontWeight="Bold" Foreground="White" VerticalAlignment="Center" />
                        <Border Background="#3b82f6" CornerRadius="4" Padding="8,3" Margin="12,0,0,0" VerticalAlignment="Center">
                            <TextBlock Text="Unofficial" FontSize="11" Foreground="White" FontWeight="SemiBold" />
                        </Border>
                    </StackPanel>
                    <TextBlock Text="Optimize your Windows gaming experience by disabling unnecessary services and processes. All changes are reversible!" 
                               Foreground="#cfd2da" Margin="0,8,0,0" TextWrapping="Wrap" />
                </StackPanel>
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button x:Name="AboutButton" Content="&#x2139; About" Style="{StaticResource ModernButton}" 
                            Margin="0,0,10,0" Click="AboutButton_OnClick" ToolTip="Learn more about Windows Game Edition" />
                    <Button x:Name="RefreshButton" Content="&#x1F504; Refresh" Style="{StaticResource ModernButton}" 
                            Click="RefreshButton_OnClick" ToolTip="Reload presets and refresh status" />
                </StackPanel>
            </Grid>
        </Border>

        <Grid Grid.Row="1" Margin="10,15,10,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="260" />
                <ColumnDefinition Width="6" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" BorderBrush="#3c4049" BorderThickness="1" CornerRadius="6" Padding="10" Background="#111318">
                <DockPanel>
                    <StackPanel DockPanel.Dock="Top" Margin="0,0,0,10">
                        <TextBlock Text="&#x1F4E6; Presets" FontWeight="Bold" FontSize="16" Foreground="White" />
                        <TextBlock Text="Select a category to configure" Foreground="#9ba0b2" FontSize="12" Margin="0,4,0,0" />
                    </StackPanel>
                    <ListBox x:Name="ManifestList"
                             DisplayMemberPath="DisplayName"
                             SelectionChanged="ManifestList_OnSelectionChanged" />
                </DockPanel>
            </Border>

            <GridSplitter Grid.Column="1" Width="6" Margin="4,0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="#3c4049" />

            <Border Grid.Column="2" BorderBrush="#3c4049" BorderThickness="1" CornerRadius="6" Padding="14" Background="#111318">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Vertical">
                        <TextBlock x:Name="PresetTitle" Text="Select a preset to see details" FontSize="22" FontWeight="Bold" Foreground="White" />
                        <TextBlock x:Name="PresetDescription" Text="" Foreground="#cfd2da" Margin="0,6,0,0" TextWrapping="Wrap" FontSize="14" />
                        <TextBlock x:Name="PresetMeta" Text="" Foreground="#9ba0b2" Margin="0,6,0,0" FontSize="12" />
                    </StackPanel>

                    <!-- Loading indicator -->
                    <Border x:Name="LoadingOverlay" Grid.Row="2" Background="#80111318" Visibility="Collapsed" CornerRadius="6" Margin="0,12,0,12">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Text="&#x23F3;" FontSize="32" HorizontalAlignment="Center" Foreground="#3b82f6" />
                            <TextBlock x:Name="LoadingText" Text="Checking system status..." Foreground="#cfd2da" Margin="0,8,0,0" FontSize="14" />
                        </StackPanel>
                    </Border>

                    <DataGrid Grid.Row="2"
                              x:Name="TweaksGrid"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              IsReadOnly="True"
                              Margin="0,12,0,12"
                              HeadersVisibility="Column"
                              AlternatingRowBackground="#1c1f26"
                              RowBackground="Transparent"
                              Foreground="White"
                              GridLinesVisibility="None"
                              Background="Transparent">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Tweak" Binding="{Binding Name}" Width="200" />
                            <DataGridTextColumn Header="Category" Binding="{Binding Category}" Width="140" />
                            <DataGridTextColumn Header="Impact" Binding="{Binding DefaultBehavior}" Width="*">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="TextWrapping" Value="Wrap" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="When Disabled" Binding="{Binding WhenDisabled}" Width="*">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="TextWrapping" Value="Wrap" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Risk" Binding="{Binding RiskLevel}" Width="80" />
                            <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100" />
                            <DataGridTextColumn Header="Status Details" Binding="{Binding StatusDetails}" Width="2*">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="TextWrapping" Value="Wrap" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>

                    <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button x:Name="RevertButton" Content="&#x21A9; Revert Changes" Style="{StaticResource WarningButton}" 
                                Margin="0,0,10,0" Click="RevertButton_OnClick" 
                                ToolTip="Undo all changes made by this preset and restore original settings" />
                        <Button x:Name="DryRunButton" Content="&#x1F441; Preview" Style="{StaticResource ModernButton}" 
                                Margin="0,0,10,0" Click="DryRunButton_OnClick"
                                ToolTip="See what changes would be made without actually applying them" />
                        <Button x:Name="ApplyButton" Content="&#x2705; Apply Preset" Style="{StaticResource PrimaryButton}" 
                                Click="ApplyButton_OnClick"
                                ToolTip="Apply all tweaks in this preset to optimize your system for gaming" />
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <Border Grid.Row="2" Margin="10,0,10,10" BorderBrush="#3c4049" BorderThickness="1" CornerRadius="6" Background="#111318" Padding="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="80" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Orientation="Horizontal">
                    <TextBlock Text="&#x1F4DD;" FontSize="14" Margin="0,0,6,0" />
                    <TextBlock Text="Session Log" FontWeight="Bold" Foreground="White" />
                </StackPanel>
                <TextBox Grid.Row="1"
                         x:Name="LogBox"
                         IsReadOnly="True"
                         TextWrapping="Wrap"
                         Background="#0d0f12"
                         Foreground="#cfd2da"
                         BorderThickness="1"
                         BorderBrush="#3c4049"
                         AcceptsReturn="True"
                         VerticalScrollBarVisibility="Auto"
                         Margin="0,6,0,12"
                         Padding="8"
                         FontFamily="Consolas, Courier New, monospace"
                         FontSize="12" />

                <StackPanel Grid.Row="2" Orientation="Horizontal">
                    <TextBlock Text="&#x1F4CA;" FontSize="14" Margin="0,0,6,0" />
                    <TextBlock Text="Action Breakdown" FontWeight="Bold" Foreground="White" />
                </StackPanel>
                <DataGrid Grid.Row="3"
                          x:Name="ResultGrid"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          IsReadOnly="True"
                          Margin="0,6,0,0"
                          HeadersVisibility="Column"
                          AlternatingRowBackground="#1c1f26"
                          RowBackground="Transparent"
                          Foreground="White"
                          GridLinesVisibility="None"
                          Background="Transparent">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="80" />
                        <DataGridTextColumn Header="Tweak" Binding="{Binding TweakName}" Width="180" />
                        <DataGridTextColumn Header="Target" Binding="{Binding Target}" Width="220" />
                        <DataGridTextColumn Header="Message" Binding="{Binding Message}" Width="*" />
                        <DataGridTextColumn Header="Details" Binding="{Binding Details}" Width="*" />
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>
    </Grid>
</Window>

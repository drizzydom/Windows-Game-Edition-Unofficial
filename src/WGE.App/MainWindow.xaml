<Window x:Class="WGE.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Windows Game Edition (Unofficial)"
        Width="1200"
        Height="800"
        MinWidth="900"
        MinHeight="600"
        Background="#15171c"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- Modern dark theme color palette -->
        <SolidColorBrush x:Key="PrimaryBackground" Color="#15171c" />
        <SolidColorBrush x:Key="SecondaryBackground" Color="#1c1f26" />
        <SolidColorBrush x:Key="CardBackground" Color="#111318" />
        <SolidColorBrush x:Key="BorderColor" Color="#3c4049" />
        <SolidColorBrush x:Key="AccentGreen" Color="#0b8457" />
        <SolidColorBrush x:Key="AccentBlue" Color="#3b82f6" />
        <SolidColorBrush x:Key="AccentOrange" Color="#f59e0b" />
        <SolidColorBrush x:Key="AccentRed" Color="#ef4444" />
        <SolidColorBrush x:Key="TextPrimary" Color="White" />
        <SolidColorBrush x:Key="TextSecondary" Color="#cfd2da" />
        <SolidColorBrush x:Key="TextMuted" Color="#9ba0b2" />

        <!-- Modern button style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#2d3139" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="BorderBrush" Value="#3c4049" />
            <Setter Property="Padding" Value="16,10" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#3d4149" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Primary action button style -->
        <Style x:Key="PrimaryButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#0b8457" />
            <Setter Property="BorderBrush" Value="#0d9668" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#0d9668" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Warning button style for revert -->
        <Style x:Key="WarningButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#b45309" />
            <Setter Property="BorderBrush" Value="#d97706" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#d97706" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Status indicator styles -->
        <Style x:Key="StatusBadge" TargetType="Border">
            <Setter Property="CornerRadius" Value="4" />
            <Setter Property="Padding" Value="6,2" />
            <Setter Property="HorizontalAlignment" Value="Left" />
        </Style>

        <!-- DataGrid styling for dark theme -->
        <Style TargetType="DataGrid">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="RowBackground" Value="Transparent" />
            <Setter Property="AlternatingRowBackground" Value="#1c1f26" />
            <Setter Property="GridLinesVisibility" Value="None" />
            <Setter Property="HeadersVisibility" Value="Column" />
        </Style>

        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#20232a" />
            <Setter Property="Foreground" Value="#9ba0b2" />
            <Setter Property="Padding" Value="10,8" />
            <Setter Property="BorderThickness" Value="0,0,0,1" />
            <Setter Property="BorderBrush" Value="#3c4049" />
            <Setter Property="FontWeight" Value="SemiBold" />
        </Style>

        <Style TargetType="DataGridCell">
            <Setter Property="Padding" Value="10,8" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridCell">
                        <Border Padding="{TemplateBinding Padding}" Background="{TemplateBinding Background}">
                            <ContentPresenter VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#2d3139" />
                    <Setter Property="Foreground" Value="White" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="DataGridRow">
            <Setter Property="Background" Value="Transparent" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#252830" />
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#2d3139" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- ListBox styling -->
        <Style TargetType="ListBox">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Foreground" Value="White" />
        </Style>

        <Style TargetType="ListBoxItem">
            <Setter Property="Padding" Value="12,10" />
            <Setter Property="Margin" Value="0,2" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="Border" Background="Transparent" CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#252830" />
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#0b8457" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="180" MinHeight="100" MaxHeight="350" />
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#20232a" Padding="16,14">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" Orientation="Vertical">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="&#x1F3AE;" FontSize="24" Margin="0,0,10,0" VerticalAlignment="Center" />
                        <TextBlock Text="Windows Game Edition" FontSize="22" FontWeight="Bold" Foreground="White" VerticalAlignment="Center" />
                        <Border Background="#3b82f6" CornerRadius="4" Padding="6,2" Margin="10,0,0,0" VerticalAlignment="Center">
                            <TextBlock Text="Unofficial" FontSize="10" Foreground="White" FontWeight="SemiBold" />
                        </Border>
                    </StackPanel>
                    <TextBlock Text="Optimize your Windows gaming experience by disabling unnecessary services and processes. All changes are reversible!" 
                               Foreground="#cfd2da" Margin="0,6,0,0" TextWrapping="Wrap" FontSize="12" />
                </StackPanel>
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button x:Name="AboutButton" Content="&#x2139; About" Style="{StaticResource ModernButton}" 
                            Margin="0,0,8,0" Click="AboutButton_OnClick" ToolTip="Learn more about Windows Game Edition" />
                    <Button x:Name="RefreshButton" Content="&#x1F504; Refresh" Style="{StaticResource ModernButton}" 
                            Click="RefreshButton_OnClick" ToolTip="Reload presets and refresh status" />
                </StackPanel>
            </Grid>
        </Border>

        <Grid Grid.Row="1" Margin="10,12,10,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="240" MinWidth="180" MaxWidth="320" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" BorderBrush="#3c4049" BorderThickness="1" CornerRadius="6" Padding="10" Background="#111318">
                <DockPanel>
                    <StackPanel DockPanel.Dock="Top" Margin="0,0,0,8">
                        <TextBlock Text="&#x1F4E6; Presets" FontWeight="Bold" FontSize="14" Foreground="White" />
                        <TextBlock Text="Select a category" Foreground="#9ba0b2" FontSize="11" Margin="0,3,0,0" />
                    </StackPanel>
                    <ListBox x:Name="ManifestList"
                             DisplayMemberPath="DisplayName"
                             SelectionChanged="ManifestList_OnSelectionChanged" />
                </DockPanel>
            </Border>

            <GridSplitter Grid.Column="1" Width="6" Margin="3,0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="Transparent" />

            <Border Grid.Column="2" BorderBrush="#3c4049" BorderThickness="1" CornerRadius="6" Padding="12" Background="#111318">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Vertical" Margin="0,0,0,10">
                        <TextBlock x:Name="PresetTitle" Text="Select a preset to see details" FontSize="18" FontWeight="Bold" Foreground="White" />
                        <TextBlock x:Name="PresetDescription" Text="" Foreground="#cfd2da" Margin="0,4,0,0" TextWrapping="Wrap" FontSize="13" />
                        <TextBlock x:Name="PresetMeta" Text="" Foreground="#9ba0b2" Margin="0,4,0,0" FontSize="11" />
                    </StackPanel>

                    <!-- Loading indicator -->
                    <Border x:Name="LoadingOverlay" Grid.Row="1" Background="#80111318" Visibility="Collapsed" CornerRadius="6">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Text="&#x23F3;" FontSize="28" HorizontalAlignment="Center" Foreground="#3b82f6" />
                            <TextBlock x:Name="LoadingText" Text="Checking system status..." Foreground="#cfd2da" Margin="0,6,0,0" FontSize="13" />
                        </StackPanel>
                    </Border>

                    <DataGrid Grid.Row="1"
                              x:Name="TweaksGrid"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              IsReadOnly="True"
                              HeadersVisibility="Column"
                              AlternatingRowBackground="#1c1f26"
                              RowBackground="Transparent"
                              Foreground="White"
                              GridLinesVisibility="None"
                              Background="Transparent"
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Auto">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Tweak" Binding="{Binding Name}" Width="160">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="TextWrapping" Value="NoWrap" />
                                        <Setter Property="TextTrimming" Value="CharacterEllipsis" />
                                        <Setter Property="ToolTip" Value="{Binding Name}" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Category" Binding="{Binding Category}" Width="100" />
                            <DataGridTextColumn Header="What it Does" Binding="{Binding DefaultBehavior}" Width="*">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="TextWrapping" Value="Wrap" />
                                        <Setter Property="MaxHeight" Value="60" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Effect" Binding="{Binding WhenDisabled}" Width="*">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="TextWrapping" Value="Wrap" />
                                        <Setter Property="MaxHeight" Value="60" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Risk" Binding="{Binding RiskLevel}" Width="60" />
                            <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="70" />
                        </DataGrid.Columns>
                    </DataGrid>

                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                        <Button x:Name="RevertButton" Content="&#x21A9; Revert" Style="{StaticResource WarningButton}" 
                                Margin="0,0,8,0" Click="RevertButton_OnClick" 
                                ToolTip="Undo all changes made by this preset and restore original settings" />
                        <Button x:Name="DryRunButton" Content="&#x1F441; Preview" Style="{StaticResource ModernButton}" 
                                Margin="0,0,8,0" Click="DryRunButton_OnClick"
                                ToolTip="See what changes would be made without actually applying them" />
                        <Button x:Name="ApplyButton" Content="&#x2705; Apply" Style="{StaticResource PrimaryButton}" 
                                Click="ApplyButton_OnClick"
                                ToolTip="Apply all tweaks in this preset to optimize your system for gaming" />
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- Resizable splitter between main content and log -->
        <GridSplitter Grid.Row="2" Height="6" HorizontalAlignment="Stretch" VerticalAlignment="Center" Background="#3c4049" 
                      ResizeDirection="Rows" ShowsPreview="True" />

        <Border Grid.Row="3" Margin="10,4,10,10" BorderBrush="#3c4049" BorderThickness="1" CornerRadius="6" Background="#111318" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Session Log (left side) -->
                <DockPanel Grid.Column="0">
                    <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,6">
                        <TextBlock Text="&#x1F4DD;" FontSize="12" Margin="0,0,4,0" />
                        <TextBlock Text="Session Log" FontWeight="Bold" Foreground="White" FontSize="12" />
                    </StackPanel>
                    <TextBox x:Name="LogBox"
                             IsReadOnly="True"
                             TextWrapping="Wrap"
                             Background="#0d0f12"
                             Foreground="#cfd2da"
                             BorderThickness="1"
                             BorderBrush="#3c4049"
                             AcceptsReturn="True"
                             VerticalScrollBarVisibility="Auto"
                             Padding="6"
                             FontFamily="Consolas, Courier New, monospace"
                             FontSize="11" />
                </DockPanel>

                <GridSplitter Grid.Column="1" Width="6" Margin="6,24,6,0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="Transparent" />

                <!-- Action Breakdown (right side) -->
                <DockPanel Grid.Column="2">
                    <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,6">
                        <TextBlock Text="&#x1F4CA;" FontSize="12" Margin="0,0,4,0" />
                        <TextBlock Text="Action Results" FontWeight="Bold" Foreground="White" FontSize="12" />
                    </StackPanel>
                    <DataGrid x:Name="ResultGrid"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              IsReadOnly="True"
                              HeadersVisibility="Column"
                              AlternatingRowBackground="#1c1f26"
                              RowBackground="Transparent"
                              Foreground="White"
                              GridLinesVisibility="None"
                              Background="Transparent"
                              VerticalScrollBarVisibility="Auto"
                              FontSize="11">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="55" />
                            <DataGridTextColumn Header="Tweak" Binding="{Binding TweakName}" Width="140" />
                            <DataGridTextColumn Header="Target" Binding="{Binding Target}" Width="140" />
                            <DataGridTextColumn Header="Message" Binding="{Binding Message}" Width="*" />
                        </DataGrid.Columns>
                    </DataGrid>
                </DockPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
